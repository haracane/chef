<%-
  @hadoop_config ||= {}
  @hadoop_config["hdfs-site.xml"] ||= {}
  @hadoop_config["hdfs-site.xml"]["dfs.name.dir"] ||= "${hadoop.tmp.dir}/dfs/name"
  @hadoop_config["hdfs-site.xml"]["dfs.data.dir"] ||= "${hadoop.tmp.dir}/dfs/data"
  @hadoop_config["hdfs-site.xml"]["dfs.replication"] ||= 3
  @hadoop_config["hdfs-site.xml"]["dfs.permissions"] ||= "false"
  @hadoop_config["hdfs-site.xml"]["dfs.datanode.max.xcievers"] ||= 2048
%>
<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
  <%-@hadoop_config["hdfs-site.xml"].each_pair do |key, val|%>
  <property>
    <name><%=key%></name>
    <value><%=val%></value>
  </property>
  <%-end%>
</configuration>
